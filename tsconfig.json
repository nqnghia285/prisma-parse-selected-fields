{
   "compilerOptions": {
      "target": "ES6",
      "lib": ["ES6", "ESNext", "ESNext.AsyncIterable"],
      "module": "CommonJS",
      "declaration": true,
      "allowJs": true,
      "strict": true,
      "outDir": "dist",
      "baseUrl": ".",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "sourceMap": true,
      "declarationMap": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
   },
   "include": ["src"],
   "exclude": ["node_modules", "dist"]
}
